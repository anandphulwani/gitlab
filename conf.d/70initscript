#!/bin/bash -ex

source /usr/local/src/gitlab.conf

cat "########################################" >/dev/null 2>&1
cat "########################################" >/dev/null 2>&1
cat "########################################" >/dev/null 2>&1
cat "############ 70initscript ##############" >/dev/null 2>&1
cat "########################################" >/dev/null 2>&1
cat "########################################" >/dev/null 2>&1
cat "########################################" >/dev/null 2>&1

